{
  "id": "{{schedule_id}}",
  "hour": "K",
  "week_day": "THU"
}

###
# @name change_class_schedule_attribute
PATCH http://localhost:8000/classes/{{class_id}}/schedules/{{schedule_id}} HTTP/1.1
Content-Type: application/json

{
  "id": "{{schedule_id}}",
  "hour": "J",
  "week_day": "WED"
}



